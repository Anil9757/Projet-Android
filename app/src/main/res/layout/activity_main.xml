<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:id="@+id/layout"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/imgView_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/raven" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="225dp"
            android:layout_marginRight="50dp"
            android:fontFamily="sans-serif-medium"
            android:text="The Raven Book Search"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:layout_marginRight="50dp"
            android:fontFamily="sans-serif-medium"
            android:text="Que souhaitez-vous faire ?"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rechercher un Livre"
            android:id="@+id/button1"
            android:layout_marginTop="380dp"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Voir les Favoris"
            android:id="@+id/button2"
            android:layout_marginTop="475dp"></Button>


    </RelativeLayout>

    

</RelativeLayout>
